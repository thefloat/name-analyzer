<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.nameanalyzer.HomeController" alignment="CENTER" spacing="10">
    <Label text="Enter your first name:" />
    <TextField fx:id="firstNameTextField" />
    <Button text="Submit" onAction="#submitName" />
    <Label fx:id="resultLabel" styleClass="result-label" />
</VBox>
