<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<BorderPane xmlns="http://javafx.com/javafx/21" stylesheets="@my-style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.nameanalyzer.LoginController">
   <top>
      <AnchorPane prefHeight="47.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
             <Text fill="#a45518" layoutY="7.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Age Analyzer" wrappingWidth="235.51171875">
                 <font>
                     <Font name="Segoe Script Bold" size="20.0" />
                 </font>
             </Text>
         </children>
      </AnchorPane>
   </top>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <center>
       <VBox alignment="CENTER" maxWidth="500.0" spacing="10.0" BorderPane.alignment="CENTER">
           <Text fill="#404040" strokeType="OUTSIDE" strokeWidth="0.0" text="User Login">
               <font>
                   <Font name="Wingdings 3" size="27.0" />
               </font>
           </Text>
           <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="202.0" promptText="Username" style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0px 0px 2px 0px;" />
           <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="202.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #404040; -fx-border-width: 0px 0px 2px 0px;" />
         <HBox alignment="CENTER_RIGHT">
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <children>
                 <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLoginAction" style="-fx-background-color: #404040;" text="Login" textFill="WHITE">
                     <cursor>
                         <Cursor fx:constant="OPEN_HAND" />
                     </cursor>
                 </Button>
            </children>
         </HBox>
           <Text fill="#494999" onMouseClicked="#handleSignupAction" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account? Singup">
               <cursor>
                   <Cursor fx:constant="HAND" />
               </cursor>
           </Text>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
       </VBox>
   </center>
</BorderPane>
