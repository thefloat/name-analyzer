<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" spacing="100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.nameanalyzer.SignupController">
   <children>
      <Text fill="#404040" strokeType="OUTSIDE" strokeWidth="0.0" text="Age Analyzer" wrappingWidth="235.51171875">
         <font>
            <Font name="Segoe Script Bold" size="31.0" />
         </font>
      </Text>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Text fill="#404040" strokeType="OUTSIDE" strokeWidth="0.0" text="User Signup">
               <font>
                  <Font name="Wingdings 3" size="27.0" />
               </font>
            </Text>
             <TextField fx:id="usernameField" promptText="Username" />
             <PasswordField fx:id="passwordField" promptText="Password" />
             <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
             <Button maxWidth="1.7976931348623157E308" onAction="#handleSignupAction" style="-fx-background-color: #404040;" text="Signup" textFill="WHITE" />
            <Text fill="#494999" onMouseClicked="#handleBackToLoginAction" strokeType="OUTSIDE" strokeWidth="0.0" text="Go to Login">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Text>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</HBox>
